{
  "editor.formatOnSave": true,
  // Disabling default formatters so that files get formatted with Prettier or ESLint instead
  "html.format.enable": false,
  "javascript.format.enable": false,
  "json.format.enable": false,
  "typescript.format.enable": false,
  // For some weird reason, ESLint is not enabled as a formatter by default
  "eslint.format.enable": true,
  // For some reason ESLint doesn't work for .js in our project. Not that it's very important since we don't have any .js
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "cSpell.language": "en-GB"
}
